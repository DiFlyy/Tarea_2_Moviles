<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/bg_artists">

    <!-- Texto de la dÃ©cada -->
    <TextView
        android:id="@+id/tvDecade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artistas"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"/>

    <!-- Primer artista -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/btnArtist1"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/ic_artist1"
            android:background="@android:color/transparent"
            android:contentDescription="Artista 1"/>
        <TextView
            android:id="@+id/tvArtist1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artista 1"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Segundo artista -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnArtist2"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/ic_artist2"
            android:background="@android:color/transparent"
            android:contentDescription="Artista 2"/>
        <TextView
            android:id="@+id/tvArtist2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artista 2"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>
